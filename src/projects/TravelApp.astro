---
import Kyoto from "../../public/assets/kyoto.png";
import Tokyo from "../../public/assets/tokyo.png";
---

<div class="relative flex flec-col h-full w-full">
    <div
        class="absolute top-0 flex h-14 w-full px-4 justify-between items-center"
    >
        <div class="flex h-8 w-8 rounded-full overflow-hidden">
            <img
                src="https://images.pexels.com/photos/415829/pexels-photo-415829.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
            />
        </div>
        <div class="font-semibold uppercase">Arigato</div>
        <div>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-align-right-icon lucide-align-right"
                ><path d="M21 12H9"></path><path d="M21 18H7"></path><path
                    d="M21 6H3"></path></svg
            >
        </div>
    </div>

    <div
        class="flex flex-col gap-3 w-full mt-18 px-4 overflow-y-auto [&::-webkit-scrollbar]:hidden"
    >
        <div
            class="flex items-center justify-between px-3 py-2 rounded bg-zinc-100 dark:bg-zinc-800 dark:text-white"
        >
            <input
                class="flex bg-none outline-none text-black dark:text-zinc-200"
                placeholder="Search"
            />
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-search-icon lucide-search"
                ><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"
                ></path></svg
            >
        </div>

        <div class="flex gap-2 text-sm text-zinc-500">
            <div
                class="flex flex-1 flex-col gap-2 items-center p-2 shadow-md dark:bg-zinc-800 rounded transition-all hover:scale-[1.05] cursor-pointer"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="#EBAE21"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-plane-icon lucide-plane"
                    ><path
                        d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"
                    ></path></svg
                >

                Flights
            </div>

            <div
                class="flex flex-1 flex-col gap-2 items-center p-2 shadow-md dark:bg-zinc-800 rounded transition-all hover:scale-[1.05] cursor-pointer"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="#4464D7"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-hotel-icon lucide-hotel"
                    ><path d="M10 22v-6.57"></path><path d="M12 11h.01"
                    ></path><path d="M12 7h.01"></path><path d="M14 15.43V22"
                    ></path><path d="M15 16a5 5 0 0 0-6 0"></path><path
                        d="M16 11h.01"></path><path d="M16 7h.01"></path><path
                        d="M8 11h.01"></path><path d="M8 7h.01"></path><rect
                        x="4"
                        y="2"
                        width="20"
                        height="20"
                        rx="2"></rect></svg
                >

                Hotels
            </div>

            <div
                class="flex flex-1 flex-col gap-2 items-center p-2 shadow-md dark:bg-zinc-800 rounded transition-all hover:scale-[1.05] cursor-pointer"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="#44ED69"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-car-front-icon lucide-car-front"
                    ><path
                        d="m21 8-2 2-1.5-3.7A2 2 0 0 0 15.646 5H8.4a2 2 0 0 0-1.903 1.257L5 10 3 8"
                    ></path><path d="M7 14h.01"></path><path d="M17 14h.01"
                    ></path><rect width="18" height="8" x="3" y="10" rx="2"
                    ></rect><path d="M5 18v2"></path><path d="M19 18v2"
                    ></path></svg
                >

                Rentals
            </div>
        </div>

        <div class="relative rounded overflow-hidden">
            <img class="select-none" src={Kyoto.src} />

            <div
                class="absolute top-0 left-0 right-0 bottom-0 bg-linear-[0deg,rgba(255,255,255,0),rgba(255,255,255,1)] dark:bg-linear-[0deg,rgba(0,0,0,0),rgba(0,0,0,1)]"
            >
            </div>

            <div class="absolute top-0 w-full flex justify-between p-1">
                <span>Kyoto</span>
                <span class="p-1 rounded text-xs bg-zinc-100 dark:bg-zinc-800">
                    Sept 20 - Oct 9
                </span>
            </div>

            <div class="absolute bottom-0 w-full flex justify-end p-1">
                <span class="p-1 rounded text-xs bg-zinc-100 dark:bg-zinc-800">
                    From $600
                </span>
            </div>
        </div>

        <div class="relative rounded overflow-hidden">
            <img class="select-none" src={Tokyo.src} />

            <div
                class="absolute top-0 left-0 right-0 bottom-0 bg-linear-[0deg,rgba(255,255,255,0),rgba(255,255,255,1)] dark:bg-linear-[0deg,rgba(0,0,0,0),rgba(0,0,0,1)]"
            >
            </div>

            <div class="absolute top-0 w-full flex justify-between p-1">
                <span>Tokyo</span>
                <span class="p-1 rounded text-xs bg-zinc-100 dark:bg-zinc-800">
                    Sept 20 - Oct 9
                </span>
            </div>

            <div class="absolute bottom-0 w-full flex justify-end p-1">
                <span class="p-1 rounded text-xs bg-zinc-100 dark:bg-zinc-800">
                    From $600
                </span>
            </div>
        </div>
    </div>

    <div
        class="absolute bottom-0 left-0 right-0 px-4 py-2 bg-zinc-100 dark:bg-zinc-950"
    >
        <div class="flex justify-between cursor-pointer">
            <div class="flex flex-col items-center justify-center">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="#3A7AE9"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-house-icon lucide-house"
                    ><path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8"
                    ></path><path
                        d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
                    ></path></svg
                >
                <span class="text-xs text-[#3A7AE9]">Home</span>
            </div>
            <div class="flex flex-col items-center justify-center">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-compass-icon lucide-compass"
                    ><path
                        d="m16.24 7.76-1.804 5.411a2 2 0 0 1-1.265 1.265L7.76 16.24l1.804-5.411a2 2 0 0 1 1.265-1.265z"
                    ></path><circle cx="12" cy="12" r="10"></circle></svg
                >
                <span class="text-xs text-zinc-500">Explore</span>
            </div>
            <div class="flex flex-col items-center justify-center">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-brain-circuit-icon lucide-brain-circuit"
                    ><path
                        d="M12 5a3 3 0 1 0-5.997.125 4 4 0 0 0-2.526 5.77 4 4 0 0 0 .556 6.588A4 4 0 1 0 12 18Z"
                    ></path><path d="M9 13a4.5 4.5 0 0 0 3-4"></path><path
                        d="M6.003 5.125A3 3 0 0 0 6.401 6.5"></path><path
                        d="M3.477 10.896a4 4 0 0 1 .585-.396"></path><path
                        d="M6 18a4 4 0 0 1-1.967-.516"></path><path d="M12 13h4"
                    ></path><path d="M12 18h6a2 2 0 0 1 2 2v1"></path><path
                        d="M12 8h8"></path><path d="M16 8V5a2 2 0 0 1 2-2"
                    ></path><circle cx="20" cy="13" r=".5"></circle><circle
                        cx="18"
                        cy="3"
                        r=".5"></circle><circle cx="20" cy="21" r=".5"
                    ></circle><circle cx="20" cy="8" r=".5"></circle></svg
                >
                <span class="text-xs text-zinc-500">AI</span>
            </div>
            <div class="flex flex-col items-center justify-center">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-user-icon lucide-user"
                    ><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"
                    ></path><circle cx="12" cy="7" r="4"></circle></svg
                >
                <span class="text-xs text-zinc-500">Profile</span>
            </div>
        </div>
    </div>
</div>
